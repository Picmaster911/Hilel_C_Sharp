                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                   
                    <TextBlock Height="26" Text="Id" Grid.Row="1" Margin="10,0,0,0"></TextBlock>
                    <TextBlock Height="26" Text="{Binding Id}" Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="2"  HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Height="26" Text="Name" Grid.Row="2" Margin="10,0,0,0"></TextBlock>
                    <TextBlock Height="26" Text="{Binding Name}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Height="26" Text="Value" Grid.Row="3" Margin="10,0,0,0"></TextBlock>
                    <TextBlock Height="26" Text="{Binding Value }" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Height="26" Text="Priority" Grid.Row="4" Margin="10,0,0,0" ></TextBlock>
                    <TextBlock Height="26" Text="{Binding Priority }" Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="2" HorizontalAlignment="Center"></TextBlock>
                    <Button Margin="6" Grid.Row="5" Grid.Column="0" Content="Edite"
                     Command="{Binding DataContext.ShowWindowEditeCommand,
                     RelativeSource={RelativeSource FindAncestor,
                     AncestorType={x:Type ListBox}}}"
                     CommandParameter="{Binding}">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Margin="6" Grid.Row="5" Grid.Column="3" Content="Delete"
                     Command="{Binding DataContext.DeleteNoteCommand,
                     RelativeSource={RelativeSource FindAncestor,
                     AncestorType={x:Type ListBox}}}"
